%% compilation 

{require_otp_vsn, "R16B03|17"}.
{erl_opts, [
            bin_opt_info,
            debug_info,
            %% fail_on_warning, 
            verbose,
            warn_bif_clash,
            warn_export_all,
            warn_export_vars,
            warn_format,
            warn_missing_spec,
            warn_obsolete_guard,
            warn_untyped_record,
            warn_unused_import
           ]}.

%% escriptize
{escript_emu_args,
 "%%! -setcookie swirl -sname swirl"
 " -s crypto"
 " +K true"
 " -pa ./ebin"
 " -config ./swirl.config"
 "\n"}.

%% test
{cover_enabled, true}.
{eunit_opts, [verbose,
              {report, {eunit_surefire, [{dir, "."}]}}]}.
{deps, [
        {proper, ".*", {git, "http://github.com/manopapad/proper.git", master}}
       ]}.
%% clean
{clean_files, ["*.eunit", "ebin/*.beam"]}.
